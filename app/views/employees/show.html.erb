<div class="container">
  <h1>Employee Details</h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= "#{@employee.first_name} #{@employee.last_name}" %></h5>
      <p class="card-text">Email: <%= @employee.email %></p>
      <p class="card-text">Contact Number: <%= @employee.contact_number %></p>
      <p class="card-text">Address: <%= @employee.address %></p>
      <p class="card-text">Pincode: <%= @employee.pincode %></p>
      <p class="card-text">City: <%= @employee.city %></p>
      <p class="card-text">State: <%= @employee.state %></p>
      <p class="card-text">Date of Birth: <%= @employee.dob %></p>
      <p class="card-text">Date of Hiring: <%= @employee.date_of_hiring %></p>
    </div>
  </div>
  
  <%= link_to 'Edit', edit_employee_path(@employee), class: 'btn btn-primary' %>
  <%= link_to 'Back', employees_path, class: 'btn btn-secondary' %>
</div>
